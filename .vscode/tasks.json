{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "./build-rustzx.sh ${input:buildMode}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build & Flash",
      "type": "shell",
      "command": "./upload.sh ${input:buildMode}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Build & Run Wokwi",
      "type": "shell",
      "command": "./run-wokwi.sh ${input:buildMode}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "buildMode",
      "description": "Select the build mode:",
      "options": [
        "release",
        "debug"
      ],
      "default": "release"
    }
  ]
}